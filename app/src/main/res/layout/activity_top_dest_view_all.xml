<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backArrowDest"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_blue"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/destinationImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:riv_corner_radius="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kalinchowk"/>

            <TextView
                android:id="@+id/dest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Destination"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/dest_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>